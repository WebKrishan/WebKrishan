 <script>
$(document).ready(function(){
 
if ($(window).width() < 767) {
  $('.col_navi').css('display', 'none');
  $(".category_title_Sel").click(function(){
  $(".col_navi").slideToggle();
});
  	$('.toggles').click(function(e) {
    });

       $(this).parent().find('.link-dropdown').toggleClass('activein');

	$('.toggles').click(function(e) {
  	//e.preventDefault();
  
    var $this = $(this);
  
    if ($this.next().hasClass('show')) {
        $this.next().removeClass('show');
        $this.next().slideUp(350);
        $this.parent().find('.new-sub').toggleClass('active');
        $this.parent().find('.link-dropdown').toggleClass('activein');


    } else {
        $this.parent().parent().find('a .new-sub').removeClass('show');
        $this.parent().parent().find('a .new-sub').slideUp(350);
        $this.parent().find('.new-sub').toggleClass('active');
        $this.parent().find('.link-dropdown').toggleClass('activein');

        $this.next().toggleClass('show');
        $this.next().slideToggle(350);
    }
});
}
else {

 	$('.toggles').click(function(e) {
    });

       $(this).parent().find('.link-dropdown').toggleClass('activein');

	$('.toggles').click(function(e) {
  	//e.preventDefault();
  
    var $this = $(this);
  
    if ($this.next().hasClass('show')) {
        $this.next().removeClass('show');
        $this.next().slideUp(350);
        $this.parent().find('.new-sub').toggleClass('active');
        $this.parent().find('.link-dropdown').toggleClass('activein');


    } else {
        $this.parent().parent().find('a .new-sub').removeClass('show');
        $this.parent().parent().find('a .new-sub').slideUp(350);
        $this.parent().find('.new-sub').toggleClass('active');
        $this.parent().find('.link-dropdown').toggleClass('activein');

        $this.next().toggleClass('show');
        $this.next().slideToggle(350);
    }
});
    }
});
</script>
    <style>


  .inner {
    display: none;
}
</style>
